---
import psykko from "./images/psykko.png";
import torete from "./images/torete.gif";
import khulgar from "./images/khulgar.jpg";
import lushen from "./images/lushen.jpg";
import defaultavatar from "./images/default_avatar.jpg";
import { Image } from "astro:assets";
---

<div id="#testimonials" class="min-w-screen flex items-center justify-center bg-black">
    <div class="w-full px-5 py-16 md:py-24 text-gray-800">
        <div class="w-full max-w-6xl mx-auto">
            <div class="text-center max-w-xl mx-auto">
                <h1 class="text-6xl md:text-7xl font-bold mb-5 bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-500 ">What customers <br>are saying.</h1>
